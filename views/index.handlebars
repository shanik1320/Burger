<hi>Eat Da Burger</hi>

<h2>Burgers not Devoured</h2>

<ul>
    {{#each burgers}}
      {{#unless Devoured}}
        {{>burgers devoured=true}}
      {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured It!<br>
    
  </div>

  <button type="submit">Add Burger</button>
</form>
