<hi>Eat Da Burger</hi>

<h2>Burgers not Devoured</h2>

<ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{>burgers/burger-block sleep=true}}
      {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured</label><br>
    <input type="radio" name="sleepy" value="1" checked> devoured <br>
    <input type="radio" name="sleepy" value="0"> Ready to eat
  </div>

  <button type="submit">Add Burger</button>
</form>
